@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "صفحه کاربران";
    Layout = "_Layout";
}

<h1>کاربران</h1>
<button class="btn btn-info text-white" onclick="openModal('@Url.Action("Create", "User")', 'ثبت کاربر جدید')">ثبت کاربر جدید</button>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="bg-info text-white">
            <th>ایدی</th>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>تاریخ تولد</th>
            <th>جنسیت</th>
            <th>استان</th>
            <th>شهر</th>
            <th>عملیات</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Province)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>

                <td>
                    <a class="btn btn-info text-white" onclick="openModal('@Url.Action("Update", "User", new { id = item.Id })', 'ویرایش کاربر')">ویرایش</a>
                    <button class="btn btn-danger text-white" onclick="openDeleteModal('@Url.Action("Delete", "User", new { id = item.Id })')">حذف</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for Create/Update -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               
            </div>
        </div>
    </div>
</div>

<!-- Modal for Delete Confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">تایید حذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                آیا مطمئن هستید که می‌خواهید این کاربر را حذف کنید؟
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لغو</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">حذف</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>

        function openModal(url, title) {
            $('#userModalLabel').text(title);
            $.get(url, function (data) {
                $('#userModal .modal-body').html(data);
                $('#userModal').modal('show');
            });
        }

        function onSuccess() {
            $('#userModal').modal('hide');
            location.reload(); 
        }

        function onFailure(xhr) {
            alert("خطایی در ارسال فرم رخ داده است: " + xhr.responseText);
        }
    </script>


    <script>
        let deleteUrl = "";

        function openDeleteModal(url) {
            deleteUrl = url;
            $('#deleteModal').modal('show');
        }

        document.getElementById("confirmDeleteButton").addEventListener("click", function () {
            $.ajax({
                url: deleteUrl,
                type: "POST",
                success: function (result) {
                    $('#deleteModal').modal('hide');
                    location.reload(); 
                },
                error: function (xhr, status, error) {
                    alert("خطا در حذف کاربر: " + xhr.responseText);
                }
            });
        });
    </script>

}
